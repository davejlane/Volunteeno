<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category %>

    <%= f.select :category, Category.all.collect {|c| [c.name, c] }, {prompt: "Select Category"} %>
  </div>
  <div class="field">
    <%= f.label :name, class: 'hide' %>
    <%= f.text_field :name, placeholder: 'name' %>
  </div>
  <div class="field">
    <%= f.label :duration, class: 'hide' %>
    <%= f.number_field :duration, placeholder: 'Duration of Event' %>
  </div>
  <div class="field">
    <%= f.label :description, class: 'hide' %>
    <%= f.text_field :description, placeholder: 'Describe your event' %>
  </div>
  <div class="field">
    <%= f.label :number_volunteer, class: 'hide' %>
    <%= f.number_field :number_volunteer, placeholder: '# of volunteers needed' %>
  </div>
  <div class="field">
    <%= f.check_box :active %>
    <%= f.label :active %>
  </div>
  <div class="actions">
    <%= f.submit 'Create', :class => 'button radius left primary' %>
    <%= link_to 'Cancel', events_path, class: 'button right radius secondary' %>
  </div>
<% end %>
